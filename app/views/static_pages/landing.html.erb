<video autoplay loop muted id="bgvid">
  <source src="https://www.filepicker.io/api/file/BSOnF03RwGt2ULYJwIWd" type="video/mp4">
</video>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Dig-It</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <li><a href="#" class="sign-in-button">Sign In</a></li>
    </ul>
  </div>

</nav>

<div class="col-xs-3 col-xs-offset-9 sign-in-form">
  <form action="<%= session_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
    <input type="text" class="form-control" name="user[username]" placeholder="Username">
    <input type="password" class="form-control" name="user[password]" placeholder="Password">
    <button class="btn btn-default" name="name">Go!</button>
  </form>
</div>

<div class="row sign-up-form col-xs-5 col-xs-offset-4">
  <h2 id="sign-up">Sign Up</h2>

  <form action="<%= users_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
    <input type="text" class="form-control" name="user[username]" placeholder="Username">
    <input type="text" class="form-control" name="user[email]" placeholder="E-mail">
    <input type="password" class="form-control" name="user[password]" placeholder="Password">
    <input type="submit" class="btn btn-default sign-up-button" name="name" value="Sign Up!">
  </form>
</div>
