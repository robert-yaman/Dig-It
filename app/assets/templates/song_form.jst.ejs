<h2>New Song</h2>

<form class="new-song-form">
  <div class="form-group">
    <label for="song-name">Name</label>
    <input type="text" class="form-control" name="song[name]" id="song-name">
  </div>

  <div class="form-group">
    <label for="song-artist">Artist</label>
    <input type="text" class="form-control" name="song[artist_name]" id="song-artist">
  </div>

  <div class="form-group">
    <label for="song-filepath">FilePathWillGoHere</label>
    <input id="filepicker-input" type="filepicker-dragdrop" name="song[file_path]">
  </div>

  <button class="btn btn-default">Go!</button>
</form>
